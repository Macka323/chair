<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Luma</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Luma.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
</head>
<body>

    <header>
        <div style="position:absolute;top:0%;left:0%;height:55px;width:100%;"></div>
        <div class="container">

            <div class="row">

                <div class="col">

                    <a asp-page="Index"><img style="height:50px;vertical-align:central;" src="https://i.postimg.cc/bN4Y5xT9/screenshot-3.png" /><br /><div style="font-size:2em;color:#464646;font-weight:600">ergonomic chair</div></a>
                </div>

                <div class="col">
                    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  mb-3">
                        <div class="container">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span style="text-align:right" class="navbar-toggler-icon"></span>
                            </button>
                            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                                <ul class="nav nav-tabs">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark @ViewData["index"] " asp-area="" asp-page="/Index">Почетна</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark @ViewData["how it works"] " asp-area="" asp-page="/How does it work">Како работи</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark @ViewData["website"] " asp-area="" asp-page="/Website">Веб интерфејс</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark @ViewData["contact"] " asp-area="" asp-page="/Contact">Контакт</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>

            </div>

        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Luma - <a asp-area="" asp-page="/Contact">Контакт</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>